# ==============================================================================
# ENVIRONMENT VARIABLES - Hotel AI System
# DO NOT COMMIT THIS FILE TO GIT
# ==============================================================================

# ========== Application ==========
APP_NAME=Hotel AI System
ENVIRONMENT=development
DEBUG=true
LOG_LEVEL=DEBUG

# ========== PostgreSQL ==========
POSTGRES_USER=hotel_user
POSTGRES_PASSWORD=hotel_password
POSTGRES_HOST=postgres
POSTGRES_PORT=5432
POSTGRES_DB=hotel_db

# ========== Redis ==========
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=redis_password
REDIS_DB=0

# ========== RabbitMQ ==========
RABBITMQ_HOST=rabbitmq
RABBITMQ_PORT=5672
RABBITMQ_USER=hotel_user
RABBITMQ_PASSWORD=rabbitmq_password

# ========== MinIO (Object Storage) ==========
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=minio_admin
MINIO_SECRET_KEY=minio_password_123
MINIO_SECURE=false
MINIO_BUCKET=hotel-data

# ========== Prefect ==========
PREFECT_API_URL=http://prefect-server:4200/api

# ========== MLflow ==========
MLFLOW_TRACKING_URI=http://mlflow:5000

# ========== OpenAI / LLM ==========
OPENAI_API_KEY=sk-your-openai-api-key-here
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here
LLM_MODEL=gpt-4o-mini
EMBEDDING_MODEL=text-embedding-3-small
EMBEDDING_DIMENSION=1536

# ========== API Settings ==========
API_HOST=0.0.0.0
API_PORT=8000
API_WORKERS=1
API_RELOAD=true

# ========== CORS ==========
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000","http://localhost:4200"]

# ========== Security ==========
SECRET_KEY=dev-secret-key-change-in-production-please
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
